@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">List Biodata Sederhana</h1>
</div>
    <div class="row">
        <div class="col-md-5">
            <a class="btn btn-success float-left" asp-area="" asp-controller="Home" asp-action="TambahData">Tambah Data</a>
        </div>
    </div>
<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Jenis Kelamin</th>
                    <th scope="col">Hobby</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>@ViewData["nama"]</td>
                        <td>@ViewData["jenisKelamin"]</td>
                        <td>@ViewData["hobby"]</td>
                    </tr>
            </tbody>
        </table>
    </div>
</div>
